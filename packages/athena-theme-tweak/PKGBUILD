pkgname=athena-theme-tweak
pkgver=1.0.3
pkgrel=2
pkgdesc="Athena Theme Tweak Tool."
arch=('any')
license=("custom")
source=("theme-switcher"
        "$pkgname.py")
sha512sums=('49f7969020c7a28e480d9fbac8f694427996613d346e2315a980bf81b8ac5d43c3efb78ae225f4e7e595ecb6d793ee20743620c47a98fe845a3c4f519523ff3c'
            '0dcde90fb3adc3c1feb561ebcbc4ee80b02d1d9801c2992924ae6f2403cf211dff907affbb889f901ea417cd8120cf9dfde082d995971335c8474d08efdfc815')

package() {

  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 755 theme-switcher "$pkgdir/usr/bin/"
  install -Dm 755 "$pkgname.py" "$pkgdir/usr/share/$pkgname/"

  cat > "$pkgdir/usr/bin/$pkgname" << EOF
#!/bin/sh
cd /usr/share/$pkgname
exec python $pkgname.py "\$@"
EOF

  chmod +x "$pkgdir/usr/bin/$pkgname"
}

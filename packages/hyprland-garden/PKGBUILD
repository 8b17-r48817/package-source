pkgname=hyprland-garden
_pkgname=hyprland-dotfiles
pkgver=88.ab429dd
pkgrel=1
pkgdesc="Hyprland Garden configuration."
arch=('any')
url='https://github.com/taylor85345/hyprland-dotfiles'
license=("GPL")
depends=('blueman' 'dunst' 'gnome-keyring' 'eww-wayland' 'foot' 'fuzzel' 'geticons-git' 'grimblast-git' 'hyprland' 'hyprpicker-git' 'kanshi' 'kdeconnect' 'lxqt' 'mpvpaper' 'nerd-fonts-inter' 'nerd-fonts-noto-sans-mono-extended' 'networkmanager-dmenu-git' 'noto-fonts' 'noto-fonts-emoji' 'openrgb' 'pavucontrol-qt' 'pipewire' 'rofi-greenclip' 'rofi-wayland' 'socat' 'sway' 'swww-git' 'trayer' 'wl-clipboard-history-git' 'wlogout' 'xdg-desktop-portal-hyprland-git')
makedepends=('git')
source=("git+https://github.com/taylor85345/hyprland-dotfiles")
sha512sums=('SKIP')

pkgver() {
  cd $_pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
    cd $_pkgname

    git submodule update --init
}

package() {
  cd $_pkgname

  install -dm 755 "$pkgdir/etc/skel/.config"
  rsync -av --progress "./" "$pkgdir/etc/skel/.config/"
}

pkgname=mirroars
pkgver=4.ace9df8
pkgrel=1
pkgdesc="Get the fastest mirrors from all mirrorlists."
arch=('any')
url='https://github.com/D3vil0p3r/mirroars'
license=("GPL3")
depends=()
makedepends=('git')
source=("git+https://github.com/D3vil0p3r/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/bin"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" *.md

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm 755 "$pkgname" "$pkgdir/usr/bin/"
}

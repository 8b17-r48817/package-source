pkgname=athena-gruvbox-theme
pkgver=1.0.0
pkgrel=3
pkgdesc="Gruvbox theme with Material Black Mango Suru icons for Athena"
arch=('any')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/share/themes"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/256x256/apps"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/256x256/categories"
  mkdir -p "${pkgdir}/usr/share/backgrounds/default"

  cp -rf "${srcdir}/usr/share/themes/Gruvbox-Dark-B" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/themes/Gruvbox-Dark-BL" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/icons/Material-Black-Mango-Suru" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/Fuchsia-Pop" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/backgrounds/default/cyborg_gruv.png" "${pkgdir}/usr/share/backgrounds/default/"  
  cp -rf "${srcdir}"/usr/share/icons/hicolor/256x256/apps/* "${pkgdir}/usr/share/icons/hicolor/256x256/apps/"
  cp -rf "${srcdir}"/usr/share/icons/hicolor/256x256/categories/* "${pkgdir}/usr/share/icons/hicolor/256x256/categories/"

}
sha512sums=('145268d0b3398cbf4f4451588dbf033c8a45633cfc1d76e4684d89ea4b3e0a74b446d427f8503871362770e2167830d15859d7fe79f47dc8e5e5178b85586929')

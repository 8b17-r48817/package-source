pkgname=candy-icons
pkgver=1062.1c5b81a
pkgrel=1
pkgdesc="Sweet gradient icons."
arch=('any')
license=("GPL3")
makedepends=('git')
source=("git+https://github.com/EliverLara/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/icons/$pkgname"
  cp -a apps devices mimetypes places preferences preview index.theme "$pkgdir/usr/share/icons/$pkgname/"
}

pkgname=athena-system-config
pkgver=1.0.0
pkgrel=2
pkgdesc="System configuration for Athena"
arch=('any')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/modprobe.d"
  mkdir -p "${pkgdir}/etc/pacman.d/gnupg"
  mkdir -p "${pkgdir}/etc/pacman.d/hooks"
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/etc/systemd/system/plymouth-quit.service.d"
  mkdir -p "${pkgdir}/usr/lib"
  mkdir -p "${pkgdir}/usr/local/bin"
  mkdir -p "${pkgdir}/usr/local/share"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor"
  mkdir -p "${pkgdir}/usr/share/pixmaps"

  cp -rf "${srcdir}"/etc/modprobe.d/* "${pkgdir}/etc/modprobe.d/"
  cp -rf "${srcdir}/etc/pacman.d/gnupg/gpg.conf" "${pkgdir}/etc/pacman.d/gnupg/"
  cp -rf "${srcdir}"/etc/pacman.d/hooks/* "${pkgdir}/etc/pacman.d/hooks/"
  cp -rf "${srcdir}/etc/profile.d" "${pkgdir}/etc/"
  cp -rf "${srcdir}/etc/skel/.bash_aliases" "${pkgdir}/etc/skel/"
  cp -rf "${srcdir}/etc/skel/.face" "${pkgdir}/etc/skel/"
  cp -rf "${srcdir}/etc/skel/.flag-work-once" "${pkgdir}/etc/skel/"
  cp -rf "${srcdir}/etc/skel/.local" "${pkgdir}/etc/skel/"
  cp -rf "${srcdir}/etc/sudoers.d" "${pkgdir}/etc/"
  cp -rf "${srcdir}/etc/systemd/system/plymouth-quit.service.d/super_long_splash.conf" "${pkgdir}/etc/systemd/system/plymouth-quit.service.d/"
  cp -rf "${srcdir}/etc/vconsole.conf" "${pkgdir}/etc/"

  cp -rf "${srcdir}/usr/lib/os-release-athena" "${pkgdir}/usr/lib/"
  cp -rf "${srcdir}"/usr/local/bin/* "${pkgdir}/usr/local/bin/"  
  cp -rf "${srcdir}/usr/local/share/athena" "${pkgdir}/usr/local/share/"
  cp -rf "${srcdir}"/usr/share/icons/hicolor/* "${pkgdir}/usr/share/icons/hicolor/"
  cp -rf "${srcdir}"/usr/share/pixmaps/* "${pkgdir}/usr/share/pixmaps/"
}

sha512sums=('357a81dffc6b9eccbf994bcef55257235f051d5dcfbc0931c607b179ecafac71db87da03fd456f979debc0ad784d19b72eb520d4439f5b49380734473ab99b65')

pkgname=athena-xfce-picom-config
pkgver=1.0.1
pkgrel=1
pkgdesc="XFCE and Picom configuration for Athena."
arch=('any')
license=("custom")
depends=('athena-everblush-theme' 'kvantum' 'mugshot' 'picom' 'ristretto' 'thunar' 'ttf-cousine-nerd' 'ttf-jetbrains-mono-nerd'  'ttf-roboto' 'ttf-roboto-mono' 'xdg-user-dirs' 'xfce4-cpugraph-plugin' 'xfce4-docklike-plugin' 'xfce4-genmon-plugin' 'xfce4-panel' 'xfce4-power-manager' 'xfce4-pulseaudio-plugin' 'xfce4-screenshooter' 'xfce4-session' 'xfce4-settings' 'xfdesktop' 'xfwm4')
conflicts=('athena-xfce-config')
source=("feather.ttf"
        "gtk.css"
        "kvantum.kvconfig"
        "xfce-init.sh"
        "$pkgname.tar.gz")
sha512sums=('807c896223158da8fa396bb10a5eb9769259c66deb44d7482ac47e1d5d6df4e75b5e33f3c411a49ca3453dc1875b03b1b8a59ded3c79417fbb1e75aea04dcf7d'
            '43ca866d936a2eddbcbd18a9412f42dd2926ea7f667c70282c39e297eceb91c3b6639ee8c684eae87552dad8e30f5708ef56c0e71f091b6e3a233cd64e83e8a5'
            '34c8a7a5ef398637b5e210e83cb7d9d1c7e8467047a45560fe781df43b4ae7b736fa3944b3e9ed8b2fe6a6e769c0648ad42356e02b60e89a80ad781afd8b5216'
            'af46c77a75f7323458363f2fbc83f9b87386bee0ac2865ddf14818b9d537718e869f7936f2de4b5bad6bfad89bd506419f8de4d6241356dc8d0d338701adeadf'
            'da88b712cfb1bc8b539f2f07b7169ca00f012cc2eff4fa2e475ba797ec22434b9fba36137c3a06f22edf4de8fef14f98444d08464d408d7f9ddccfee7d31cc8c')

package() {
  mkdir -p "${pkgdir}/etc/profile.d"
  mkdir -p "${pkgdir}/etc/skel/.config/gtk-3.0"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/share/fonts/TTF"
  mkdir -p "${pkgdir}/usr/share/icons"
  mkdir -p "${pkgdir}/usr/share/Kvantum"

  install -Dm644 "${srcdir}/xfce-init.sh" "${pkgdir}/etc/profile.d/"
  install -Dm644 "${srcdir}/dots/.profile" "${pkgdir}/etc/skel/"
  install -Dm644 "${srcdir}/dots/.Xresources" "${pkgdir}/etc/skel/"
  install -Dm644 "${srcdir}/picom.conf" "${pkgdir}/etc/skel/.config/"
  install -Dm644 "${srcdir}/gtk.css" "${pkgdir}/etc/skel/.config/gtk-3.0/"
  cp -a "${srcdir}/xfce4" "${pkgdir}/etc/skel/.config/"
  install -Dm644 "${srcdir}/feather.ttf" "${pkgdir}/usr/share/fonts/TTF/"
  cp -a "${srcdir}/assets" "${pkgdir}/usr/share/icons/"
  install -Dm755 "${srcdir}/genmon-scripts/genmon-cpu" "${pkgdir}/usr/bin/"
  install -Dm755 "${srcdir}/genmon-scripts/genmon-datetime" "${pkgdir}/usr/bin/"
  install -Dm755 "${srcdir}/genmon-scripts/genmon-mem" "${pkgdir}/usr/bin/"
  cp -a "${srcdir}/Everblush" "${pkgdir}/usr/share/Kvantum/"
  install -Dm644 "${srcdir}/kvantum.kvconfig" "${pkgdir}/usr/share/Kvantum/"

}

pkgname=athena-xfce-base
pkgver=1.0.1
pkgrel=1
pkgdesc="XFCE base configuration for Athena."
arch=('any')
license=("custom")
depends=('mugshot' 'ristretto' 'xdg-user-dirs' 'xfce4-cpugraph-plugin' 'xfce4-panel' 'xfce4-power-manager' 'xfce4-pulseaudio-plugin' 'xfce4-screenshooter' 'xfce4-session' 'xfce4-settings' 'xfce4-whiskermenu-plugin' 'xfdesktop' 'xfwm4' 'xorg-xrandr')
source=("xfce-applications.menu"
        "xfce-init.sh")
install='athena-xfce-base.install'
sha512sums=('e53cc2e573489c83f1126c543c0fe944fe73e894d1bd534b5d7b1e796efa02773255dadfbeeb3c68a6519be3f43f4d0e6d468ced5e5cce3a7dddc5c0e7be2705'
            '6c1b167ed997659bcfd9b249e123a5e8d4c6e4167a3224404e400cbc02bd6e08044949f4f940c08ecc054a12faf3731f408cfd1270137b2c76b1141c1d5d677c')

package() {
  install -dm 755 "${pkgdir}/etc/profile.d"
  install -dm 755 "${pkgdir}/etc/skel"
  install -dm 755 "${pkgdir}/usr/share/xfce4"

  install -Dm644 "${srcdir}/xfce-init.sh" "${pkgdir}/etc/profile.d/"
  install -Dm644 "${srcdir}/xfce-applications.menu" "${pkgdir}/usr/share/xfce4/xfce-applications.menu"
  touch "${pkgdir}/etc/skel/.flag-xfce-once"
}

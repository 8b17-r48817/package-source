pkgname=athena-xfce-config
pkgver=1.0.1
pkgrel=1
pkgdesc="XFCE configuration for Athena."
arch=('any')
license=("custom")
depends=('athena-xfce-base' 'nautilus')
source=("$pkgname.tar.gz")
sha512sums=('78808bb4ed4ba5c784e184d22cc7198ff031ab1d4d262a3b7cb011b4d6c5713b9f1582ebd4d9073655ac77f15658fe0ae9ca8375147ec34e48f533468fe5f5b4')

package() {
  mkdir -p "${pkgdir}/etc/skel/.config"

  cp -rf "${srcdir}/xfce4" "${pkgdir}/etc/skel/.config/"
}

pkgname=athena-xfce-config
pkgver=1.0.1
pkgrel=1
pkgdesc="XFCE configuration for Athena."
arch=('any')
license=("custom")
depends=('athena-xfce-base' 'nautilus')
source=("$pkgname.tar.gz")
sha512sums=('f31ac9e9e89b624e72515037b95e71cce795313a004e7cb900ef8d86088a2637b8d7aa7016cdd8b378eaa19bba632b054cc66ba89f682e73700be6d8a30ab1ec')

package() {
  mkdir -p "${pkgdir}/etc/skel/.config"

  cp -rf "${srcdir}/etc/skel/.config/xfce4" "${pkgdir}/etc/skel/.config/"
}

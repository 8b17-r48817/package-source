package() {
  install -d 755 "${pkgdir}/etc/skel/.config"
  install -d 755 "${pkgdir}/etc/xdg/menus"

  cp -rf "${srcdir}/kwinrc" "${pkgdir}/etc/skel/.config/"
  cp -rf "${srcdir}/kwinrulesrc" "${pkgdir}/etc/skel/.config/"
  cp -rf "${srcdir}/applications-kmenuedit.menu" "${pkgdir}/etc/xdg/menus/"
  kbuildsycoca5
}

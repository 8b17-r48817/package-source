source=("applications-kmenuedit.menu"
        "kwinrc"
        "kwinrulesrc")
sha512sums=('95b77baa43bc02b79761b18fae7c1b58dfdae029ba327d9fb7be6a1eb9c88d728bc52c3f95dd3b21a7b99920798baf7d7190c922ae2df8f53aff62a63c32f37f'

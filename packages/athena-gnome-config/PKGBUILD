pkgname=athena-gnome-config
pkgver=1.0.0
pkgrel=1
pkgdesc="GNOME configuration for Athena"
arch=('any')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/share/athena-gnome-config"
  mkdir -p "${pkgdir}/usr/share/gnome-shell"

  cp -rf "${srcdir}/etc/skel/.local" "${pkgdir}/etc/skel/"
  
  cp -rf "${srcdir}"/usr/share/athena-gnome-config/* "${pkgdir}/usr/share/athena-gnome-config/"
  cp -rf "${srcdir}/usr/share/gnome-shell/gnome-shell-theme.gresource.new" "${pkgdir}/usr/share/gnome-shell/"
  
}
sha512sums=('b0a798f67181fff6f82a52b94fcc1ae423f70dc4bc3e6e484d083ac0f5c0ab9c74452e0357f7b19481833ab8d4cd6d0cca407f92f37c31afa6299e15744184b7')

pkgname=athena-gnome-config
pkgver=1.0.1
pkgrel=2
pkgdesc="GNOME configuration for Athena."
arch=('any')
license=("custom")
depends=('gnome-characters' 'gnome-control-center' 'gnome-gesture-improvements' 'gnome-keyring' 'gnome-menus' 'gnome-session' 'gnome-shell-extensions' 'gnome-shell-performance' 'gnome-system-monitor' 'gnome-terminal' 'gnome-themes-extra' 'gnome-tweaks' 'noto-fonts-emoji' 'polkit-gnome' 'qqc2-desktop-style' 'ttf-jetbrains-mono' 'wayland' 'xdg-desktop-portal' 'xdg-desktop-portal-gnome' 'xdg-user-dirs' 'gnome-shell-extension-appindicator-git' 'gnome-shell-extension-aylur-widgets-git' 'gnome-shell-extension-desktop-icons-ng-git' 'gnome-shell-extension-fly-pie-git' 'gnome-shell-extension-hide-activities-git' 'gnome-shell-extension-logo-menu-git' 'gnome-shell-extension-pop-shell-git' 'gnome-shell-extension-remove-app-menu-git' 'gnome-shell-extension-top-bar-organizer' 'gnome-shell-extension-ubuntu-dock-git' 'gnome-shell-extension-vitals-git')
conflicts=('athena-gnome-material-shell-config')
source=("$pkgname.tar.gz")
sha512sums=('07331617fc767d2ac17eea39c5a6a4e3f6e567a524dc4b8f67fcbb70e6d952757fb430548f72662ddac5130f2b31095fe149240fd7021b048b1f4b931e8cd85c')

package() {
  mkdir -p "${pkgdir}/etc"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/share/athena-gnome-config"

  cp -rf "${srcdir}/etc/profile.d" "${pkgdir}/etc/"
  cp -rf "${srcdir}"/usr/share/athena-gnome-config/* "${pkgdir}/usr/share/athena-gnome-config/"
}

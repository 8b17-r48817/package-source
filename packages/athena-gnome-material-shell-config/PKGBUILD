pkgname=athena-gnome-material-shell-config
pkgver=1.0.0
pkgrel=2
pkgdesc="GNOME Material Shell configuration for Athena."
arch=('any')
license=("custom")
depends=('eog' 'gnome-characters' 'gnome-control-center' 'gnome-keyring' 'gnome-menus' 'gnome-session' 'gnome-shell-extensions' 'gnome-shell-performance' 'gnome-system-monitor' 'gnome-terminal' 'gnome-themes-extra' 'gnome-tweaks' 'malcontent' 'nautilus' 'noto-fonts-emoji' 'polkit-gnome' 'qqc2-desktop-style' 'ttf-jetbrains-mono' 'wayland' 'xdg-desktop-portal' 'xdg-desktop-portal-gnome' 'xdg-user-dirs' 'gnome-shell-extension-appindicator-git' 'gnome-shell-extension-fly-pie-git' 'gnome-shell-extension-material-shell-git')
conflicts=('athena-gnome-config')
source=("$pkgname.tar.gz")
sha512sums=('2354829614017a984fdaddb4a81c771fc56b09e0a04b63a2a9ef3d993d9f9d7f89963403ca888c1119547b424936953467a120f221d3e25798984fa4a0109aef')

package() {
  mkdir -p "${pkgdir}/etc"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/share/athena-gnome-config"

  cp -rf "${srcdir}/etc/profile.d" "${pkgdir}/etc/"
  cp -rf "${srcdir}"/usr/share/athena-gnome-config/* "${pkgdir}/usr/share/athena-gnome-config/"
}

pkgname=athena-gnome-material-shell-config
pkgver=1.0.0
pkgrel=2
pkgdesc="GNOME Material Shell configuration for Athena."
arch=('any')
license=("custom")
depends=('gnome-characters' 'gnome-control-center' 'gnome-gesture-improvements' 'gnome-keyring' 'gnome-menus' 'gnome-session' 'gnome-shell-extensions' 'gnome-shell-performance' 'gnome-system-monitor' 'gnome-terminal' 'gnome-themes-extra' 'gnome-tweaks' 'malcontent' 'noto-fonts-emoji' 'polkit-gnome' 'qqc2-desktop-style' 'ttf-jetbrains-mono' 'wayland' 'xdg-desktop-portal' 'xdg-desktop-portal-gnome' 'xdg-user-dirs' 'gnome-shell-extension-appindicator-git' 'gnome-shell-extension-fly-pie-git' 'gnome-shell-extension-material-shell-git')
conflicts=('athena-gnome-config')
source=("$pkgname.tar.gz")
sha512sums=('134f44beef020852fe9c3f2718b437dfc2ae45059e250f00bde4cc4b47ac510197d0c611b9576e698f0417438c8c36b1fc65abeb8ec74ff8554d69292d2c6c98')

package() {
  mkdir -p "${pkgdir}/etc"
  mkdir -m 750 -p "${pkgdir}/etc/sudoers.d"
  mkdir -p "${pkgdir}/usr/share/athena-gnome-config"

  cp -rf "${srcdir}/etc/profile.d" "${pkgdir}/etc/"
  cp -rf "${srcdir}"/usr/share/athena-gnome-config/* "${pkgdir}/usr/share/athena-gnome-config/"
}

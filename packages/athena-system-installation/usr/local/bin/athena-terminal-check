#!/bin/bash
#set -e
###############################################################################
# Author	:	Antonio Voza
###############################################################################
#
#   DO NOT JUST RUN THIS. EXAMINE AND JUDGE. RUN AT YOUR OWN RISK.
#
###############################################################################
echo
echo
echo "#################################"
echo "Start athena-terminal-check"
echo "#################################"
echo

while [ -e "/var/lib/pacman/db.lck" ];
do
    echo 'Pacman is not ready yet. Will try again in 5 seconds.'
    seconds=$(($seconds + 5))
    sleep 5
    if [[ "$seconds" == "30" ]]; then
        echo 'Warning: removing pacman db.lck!'
        rm /var/lib/pacman/db.lck
    fi
done

terminal_bin=("alacritty" "cool-retro-term" "gnome-terminal" "kitty" "konsole" "urxvt" "xterm")
terminal_pkg=("alacritty" "cool-retro-term" "gnome-terminal" "kitty" "konsole" "rxvt-unicode" "xterm")
terminal_command=("-e" "-e" "--" "-e" "-e" "-e" "-e")

length=${#terminal_bin[@]}

keybind="gsettings set org.gnome.settings-daemon.plugins.media-keys.custom-keybinding:/org/gnome/settings-daemon/plugins/media-keys/custom-keybindings/custom1/"

for (( i=0; i<${length}; i++ ));
do
  bin="${terminal_bin[$i]}"
  pkg="${terminal_pkg[$i]}"
  arg_cmd="${terminal_command[$i]}"
  
  if pacman -Qq $pkg > /dev/null ; then

    sed -i -e "s/alacritty/$bin/g" /etc/profile.d/run-once.sh

    find /etc/skel/.local/share/applications -type f -name '*.desktop' -exec sed -i -e "s/alacritty -e/$bin $arg_cmd/g" -e "s/cool-retro-term -e/$bin $arg_cmd/g" -e "s/gnome-terminal --/$bin $arg_cmd/g" -e "s/kitty -e/$bin $arg_cmd/g" -e "s/konsole -e/$bin $arg_cmd/g" -e "s/urxvt -e/$bin $arg_cmd/g" -e "s/xterm -e/$bin $arg_cmd/g" {} +

    sed -i -e "s/alacritty -e/$bin $arg_cmd/g" -e "s/cool-retro-term -e/$bin $arg_cmd/g" -e "s/gnome-terminal --/$bin $arg_cmd/g" -e "s/kitty -e/$bin $arg_cmd/g" -e "s/konsole -e/$bin $arg_cmd/g" -e "s/urxvt -e/$bin $arg_cmd/g" -e "s/xterm -e/$bin $arg_cmd/g" /usr/share/athena-gnome-config/dconf-shell.ini /usr/share/htb-tools/htb-update.py

    sed -i -e "s/\"alacritty\", \"-e\"/\"$bin\", \"$arg_cmd\"/g" -e "s/\"cool-retro-term\", \"-e\"/\"$bin\", \"$arg_cmd\"/g" -e "s/\"gnome-terminal\", \"--\"/\"$bin\", \"$arg_cmd\"/g" -e "s/\"kitty\", \"-e\"/\"$bin\", \"$arg_cmd\"/g" -e "s/\"konsole\", \"-e\"/\"$bin\", \"$arg_cmd\"/g" -e "s/\"urxvt\", \"-e\"/\"$bin\", \"$arg_cmd\"/g" -e "s/\"xterm\", \"-e\"/\"$bin\", \"$arg_cmd\"/g" /usr/share/athena-welcome/athena-welcome.py
    
  fi

done

echo
echo "#################################"
echo "End athena-terminal-check"
echo "#################################"
echo

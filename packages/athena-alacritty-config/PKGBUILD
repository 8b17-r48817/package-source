pkgname=athena-alacritty-config
pkgver=1.0.0
pkgrel=1
pkgdesc="Alacritty configuration for Athena."
arch=('any')
license=("custom")
depends=('alacritty')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"

  cp -rf "${srcdir}/etc/skel/.config" "${pkgdir}/etc/skel/"
}
sha512sums=('4179adea24ec85db20810e7c8acf0180d743acea8662f34b16b620d5b0ac95c5e5406febb6c7481ec7afaa477d2ab927912dcfab12e821ae0427149445779c0e')

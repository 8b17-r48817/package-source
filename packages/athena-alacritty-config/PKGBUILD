pkgname=athena-alacritty-config
pkgver=1.0.0
pkgrel=1
pkgdesc="Alacritty configuration for Athena."
arch=('any')
license=("custom")
depends=('alacritty' 'ttf-jetbrains-mono-nerd')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"

  cp -rf "${srcdir}/etc/skel/.config" "${pkgdir}/etc/skel/"
}
sha512sums=('b05a38c5fdba8b14ba32393a69c796f6873d652fff45c56aada04d6443cd27ce01ebd60ef8d73968fd6b3d2139aa05bb38e78334eb881d2ba12742984ae87a22')

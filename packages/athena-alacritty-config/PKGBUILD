pkgname=athena-alacritty-config
pkgver=1.0.0
pkgrel=1
pkgdesc="Alacritty configuration for Athena."
arch=('any')
license=("custom")
depends=('alacritty' 'ttf-jetbrains-mono-nerd')
source=("alacritty.yml")

package() {
  install -dm 755 "${pkgdir}/etc/skel/.config/alacritty"

  install -Dm644 "${srcdir}/alacritty.yml" "${pkgdir}/etc/skel/.config/alacritty/"
}
sha512sums=('7d955d4303272fc92839d1ccf8611cc2ba3dd62f33b04032f633244debfed27a7ad9b88d61904690b89510648e2d6afd13109d99d5a43c46c786acea99fd9fe9')

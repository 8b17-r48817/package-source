pkgname=athena-xxe-theme
pkgver=2023.05.17.r6.ge589281
pkgrel=1
pkgdesc="XXE theme with Tela Circle Black Dark icons for Athena."
arch=('any')
license=("GPL3")
makedepends=('git' 'sassc')
source=("git+https://github.com/vinceliuice/Graphite-gtk-theme.git"
        "git+https://github.com/vinceliuice/Tela-circle-icon-theme.git"
        "https://github.com/ful1e5/Bibata_Cursor/releases/latest/download/Bibata-Modern-Ice.tar.gz"
        "xxe.png"
        "$pkgname.tar.gz")
sha512sums=('SKIP'
            'SKIP'
            'bb11cc73a15b26ad98818a70e22547fb1be0984e0f92250e1c5a8f42a537552a1193d53136d91290ca6fb2e52b6cee217c9c66551b7308195d2da8ee37dfe554'
            '4493ea170f071e876460ae4be316df7f0f12c6aad741398b0b4469f0148963076b45da4fbbdb5600a5eae67c36e8e275b7fe0c813053d49f5fe731523b1fce7e'
            'a4aa70e5142634b60dd169b653c71bc92323986fc848e717a212cff310469f75ac4712e096f89cb94447a5ef902ab110c5c1a7a6880f1f7c65752b741558a989')

pkgver() {
  cd Graphite-gtk-theme

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {

  install -dm 755 "$pkgdir/usr/share/themes"
  install -dm 755 "$pkgdir/usr/share/icons/hicolor/256x256"
  install -dm 755 "$pkgdir/usr/share/backgrounds/default"

  cp -a Bibata-Modern-Ice "$pkgdir/usr/share/icons/"
  cp -a "$srcdir/icons/apps" "$pkgdir/usr/share/icons/hicolor/256x256/"
  cp -a "$srcdir/icons/categories" "$pkgdir/usr/share/icons/hicolor/256x256/"
  install -Dm 644 "xxe.png" "$pkgdir/usr/share/backgrounds/default/"

  cd Graphite-gtk-theme

  ./install.sh -n Graphite -l -c dark -d $pkgdir/usr/share/themes
  ./install.sh -n Graphite-Rimless -l -c dark --tweaks rimless -d $pkgdir/usr/share/themes

  rm -rf $pkgdir/usr/share/themes/Graphite-Dark-hdpi $pkgdir/usr/share/themes/Graphite-Dark-xhdpi $pkgdir/usr/share/themes/Graphite-Rimless-Dark-hdpi $pkgdir/usr/share/themes/Graphite-Rimless-Dark-xhdpi


  cd ../Tela-circle-icon-theme

  ./install.sh black -d "$pkgdir/usr/share/icons" -c

}

pkgname=nist-feed
pkgver=1.0.0
pkgrel=3
pkgdesc="NIST NVD feed and popup notifications"
arch=('any')
license=("custom")
install=nist-feed.install
depends=('cron' 'dunst')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/local/bin"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/scalable/apps"
  mkdir -p "${pkgdir}/usr/share/pixmaps"

  cp -rf "${srcdir}/usr/share/icons/hicolor/scalable/apps/cve.svg" "${pkgdir}/usr/share/icons/hicolor/scalable/apps/"
  cp -rf "${srcdir}/usr/share/pixmaps/cve.png" "${pkgdir}/usr/share/pixmaps/"

  install -Dm755 "${srcdir}/usr/local/bin/nist-feed" "${pkgdir}/usr/local/bin/"
}

sha512sums=('4396dc1e677ca4390998b3fa59fe40bd7b853509c6f220363c4169aab503934e65fa7a28f2ed6b33d7b2292068ec5b362c6ba2e44fd17c5713debac7f4ee81f7')

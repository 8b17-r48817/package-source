pkgname=athena-welcome
pkgver=2.0.2
pkgrel=2
pkgdesc="Welcome App for Athena"
arch=('any')
license=("custom")
depends=('libwnck3' 'parallel' 'reflector' 'rsync')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel/.config/athena-welcome"
  mkdir -p "${pkgdir}/etc/skel/.config/autostart"
  mkdir -p "${pkgdir}/usr/local/bin"
  mkdir -p "${pkgdir}/usr/share/applications"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/scalable/apps"

  cp -rf "${srcdir}/etc/skel/.config/athena-welcome/settings.conf" "${pkgdir}/etc/skel/.config/athena-welcome/"
  cp -rf "${srcdir}/etc/skel/.config/autostart/athena-welcome.desktop" "${pkgdir}/etc/skel/.config/autostart/"  
  install -Dm755 "${srcdir}/usr/local/bin/athena-welcome" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/hacking-variables" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/role-viewer" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/tool-recipe" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/mirroars" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/athena-motd" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/athena-upgrade" "${pkgdir}/usr/local/bin/"
  install -Dm755 "${srcdir}/usr/local/bin/athena-fix" "${pkgdir}/usr/local/bin/"
  cp -rf "${srcdir}/usr/share/applications/athena-welcome.desktop" "${pkgdir}/usr/share/applications/"
  cp -rf "${srcdir}/usr/share/icons/hicolor/scalable/apps/athena-hello-logo.svg" "${pkgdir}/usr/share/icons/hicolor/scalable/apps/"
  cp -rf "${srcdir}/usr/share/athena-welcome" "${pkgdir}/usr/share/"
  chmod 755 "${pkgdir}/usr/share/athena-welcome/role-tools"

}
sha512sums=('9e75fc81c56013aa39853a6bc3a886367a92bcff700b51b312104defc54e1acc29e39bd4cfb466fc91be311c5ddd836ac1313cb3e1e5e273553cf32a98a5363d')

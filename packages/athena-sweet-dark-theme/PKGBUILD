pkgname=athena-sweet-dark-theme
pkgver=14.b2192ff
pkgrel=2
pkgdesc="Sweet Dark theme with Sweet Purple icons for Athena"
arch=('any')
license=("GPL3")
makedepends=('git')
source=("git+https://github.com/EliverLara/Sweet-folders.git"
        "git+https://github.com/EliverLara/candy-icons.git"
        "neon_circle.jpg"
        "$pkgname.tar.gz")
sha512sums=('SKIP'
            'SKIP'
            '8dc1636380142b71c9c2af783784161c7663d410437b1fdab4139aeca7f2e611750d9eb1233a75b5d19d9a82985ee4fde1581ef1a952ab24b7ced5b12c54b395'
            '3112367f06dfa4e4a59a52595312fa6a842a3f9341e50a483a5bdded3bc44715b32426c62677331ec400e04dab252420a833fb686c37fbe1302639afbd1991c5')

pkgver() {
  cd Sweet-folders

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/share/themes"
  install -dm 755 "$pkgdir/usr/share/icons/hicolor/256x256"
  install -dm 755 "$pkgdir/usr/share/backgrounds/default"

  cp -a Sweet-folders/Sweet-Purple "$pkgdir/usr/share/icons/"
  rm -rf candy-icons/.github candy-icons/LICENSE candy-icons/README.md
  cp -a candy-icons "$pkgdir/usr/share/icons/"
  install -Dm 644 "neon_circle.jpg" "$pkgdir/usr/share/backgrounds/default/"

  cp -a "$srcdir/icons/apps" "$pkgdir/usr/share/icons/hicolor/256x256/"
  cp -a "$srcdir/icons/categories" "$pkgdir/usr/share/icons/hicolor/256x256/"
  cp -rf "$srcdir/Sweet-Dark-v40" "$pkgdir/usr/share/themes/"
  cp -rf "$srcdir/oreo_spark_purple_cursors" "$pkgdir/usr/share/icons/"
}

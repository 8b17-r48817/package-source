pkgname=athena-blue-eyes-theme
pkgver=1.0.0
pkgrel=3
pkgdesc="Blue Eyes samurai theme with Tokyo Night Dark icons for Athena"
arch=('any')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/share/themes"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/256x256/apps"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/256x256/categories"
  mkdir -p "${pkgdir}/usr/share/backgrounds/default"  

  cp -rf "${srcdir}/usr/share/themes/Tokyonight-Dark-B" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/themes/Tokyonight-Dark-BL" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/icons/tokyonight_dark" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/oreo_blue_cursors" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/backgrounds/default/blue-eyes.jpg" "${pkgdir}/usr/share/backgrounds/default/"
  cp -rf "${srcdir}"/usr/share/icons/hicolor/256x256/apps/* "${pkgdir}/usr/share/icons/hicolor/256x256/apps/"
  cp -rf "${srcdir}"/usr/share/icons/hicolor/256x256/categories/* "${pkgdir}/usr/share/icons/hicolor/256x256/categories/"

}
sha512sums=('d51bfa08f95dcdabda8e7d8e146c9abe3960f78ada8056ec88867b235c1865b1d7738f614bc0e96873cf00a715c5a38ad2358d5c0a92274c6337ca5aee897e37')

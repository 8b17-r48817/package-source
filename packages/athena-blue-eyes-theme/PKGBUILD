pkgname=athena-blue-eyes-theme
pkgver=52.6e4ee110
pkgrel=1
pkgdesc="Blue Eyes samurai theme with Tokyo Night Dark icons for Athena"
arch=('any')
license=("GPL3")
makedepends=('git')
source=("git+https://github.com/Fausto-Korpsvart/Tokyo-Night-GTK-Theme.git"
        "blue-eyes.jpg"
        "$pkgname.tar.gz")

pkgver() {
  cd Tokyo-Night-GTK-Theme

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/share/themes"
  install -dm 755 "$pkgdir/usr/share/icons/hicolor/256x256"
  install -dm 755 "$pkgdir/usr/share/backgrounds/default"

  cp -a Tokyo-Night-GTK-Theme/themes/Tokyonight-Dark-B "$pkgdir/usr/share/themes/"
  cp -a Tokyo-Night-GTK-Theme/themes/Tokyonight-Dark-BL "$pkgdir/usr/share/themes/"
  cp -a Tokyo-Night-GTK-Theme/icons/Tokyonight-Dark "$pkgdir/usr/share/icons/"
  install -Dm 644 "blue-eyes.jpg" "$pkgdir/usr/share/backgrounds/default/"

  cp -a "$srcdir/icons/apps" "$pkgdir/usr/share/icons/hicolor/256x256/"
  cp -a "$srcdir/icons/categories" "$pkgdir/usr/share/icons/hicolor/256x256/"
  cp -a "$srcdir/oreo_blue_cursors" "$pkgdir/usr/share/icons/"

}
sha512sums=('SKIP'
            'c4575e024afbec6cf5624957c1102a866a468f90c1c3f0e7368cbb6905b4f559649f96ee4321036d3c23042b87777f07020e78b423922aa3f38ad6b9f8396495'
            '8e3011d227eeaad1a1536602f1b11e88f644e247e5302df88b554a0a060c7fbe5c6df683a015cd65d340227220240cf9aa71b2d983797bb8c09431152b40ee44')

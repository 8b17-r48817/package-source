pkgname=athena-akame-theme
pkgver=19.a8b01a28
pkgrel=1
pkgdesc="Akame theme with Material Black Cherry Suru icons for Athena."
arch=('any')
license=("GPL3")
makedepends=('git')
source=("git+https://github.com/Fausto-Korpsvart/Nightfox-GTK-Theme.git"
        "git+https://github.com/rtlewis88/rtl88-Themes#branch=material-black-COLORS"
        "https://github.com/ful1e5/Bibata_Extra_Cursor/releases/latest/download/Bibata-Modern-DarkRed.tar.gz"
        "$pkgname"
        "akame.jpg"
        "$pkgname.tar.gz")
sha512sums=('SKIP'
            'SKIP'
            '3a1360ba5541598ec6c4dfa6cd261e49ec849dafbe21e5a047820412b093486a975bbb97c1fac616f510f1e878e19afacbfd9e82baa21664b022af25347ecc2d'
            'e0cbc51dea1b0b7515b26c776a73336f5c56d806bcd99eb0c399975ea42444ec6d93e0abef479a3516fc29e4f16d8c8485ac515afc8c13ef979e1395fc7f4c14'
            'd3f73d2fb366265f28023e7e30c5391e7591cbd0b66ec0024b202e33bd03a403683519e623075f39267d4ff9f6d523b89d9752b282d5d61bda8ac25967637f8a'
            '6d70c506ca2124989b835fc2bd95fad56141d8f79ed6f45dcd96b26e4377db48052881953f34d65c7b0450530af38d0bc028052ca5b93bd08ec2ad7af7d2b2f0')

pkgver() {
  cd Nightfox-GTK-Theme

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  install -dm 755 "$pkgdir/usr/bin"
  install -dm 755 "$pkgdir/usr/share/themes"
  install -dm 755 "$pkgdir/usr/share/icons/hicolor/scalable"
  install -dm 755 "$pkgdir/usr/share/backgrounds/default"

  cp -a Nightfox-GTK-Theme/themes/Nightfox-Dusk-B "$pkgdir/usr/share/themes/"
  cp -a Nightfox-GTK-Theme/themes/Nightfox-Dusk-BL "$pkgdir/usr/share/themes/"
  cp -a rtl88-Themes/Material-Black-Cherry-Suru "$pkgdir/usr/share/icons/"
  cp -a Bibata-Modern-DarkRed "$pkgdir/usr/share/icons/"
  install -Dm 755 "$pkgname" "$pkgdir/usr/bin/"
  install -Dm 644 "akame.jpg" "$pkgdir/usr/share/backgrounds/default/"

  cp -a "$srcdir/icons/apps" "$pkgdir/usr/share/icons/hicolor/scalable/"
  cp -a "$srcdir/icons/categories" "$pkgdir/usr/share/icons/hicolor/scalable/"

}

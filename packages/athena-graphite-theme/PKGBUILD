pkgname=athena-graphite-theme
pkgver=1.0.0
pkgrel=3
pkgdesc="Graphite Dark theme with Tela Circle Black Dark icons for Athena"
arch=('any')
license=("custom")
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/usr/share/themes"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/256x256/apps"
  mkdir -p "${pkgdir}/usr/share/icons/hicolor/256x256/categories"
  mkdir -p "${pkgdir}/usr/share/backgrounds/default"

  cp -rf "${srcdir}/usr/share/themes/Graphite-Dark" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/themes/Graphite-Dark-Rimless" "${pkgdir}/usr/share/themes/"
  cp -rf "${srcdir}/usr/share/icons/Tela-circle-black" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/Tela-circle-black-dark" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/icons/Bibata-Modern-Ice" "${pkgdir}/usr/share/icons/"
  cp -rf "${srcdir}/usr/share/backgrounds/default/arch-ascii.png" "${pkgdir}/usr/share/backgrounds/default/"  
  cp -rf "${srcdir}"/usr/share/icons/hicolor/256x256/apps/* "${pkgdir}/usr/share/icons/hicolor/256x256/apps/"
  cp -rf "${srcdir}"/usr/share/icons/hicolor/256x256/categories/* "${pkgdir}/usr/share/icons/hicolor/256x256/categories/"

}
sha512sums=('7671940945243d2e321915dc8a43ccab910b0279af4f11a926401ab3836a2715ca9f4ef4181cb66d7f8afbababc33535e598730a20d18a8858ff95d0150200b4')

pkgname=athena-zsh
pkgver=1.0.1
pkgrel=1
pkgdesc="Zsh for Athena"
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('a4382705e35adcabc8943b2ca0f46700dcd6c623e6ef8e85fab55c6ec5917fd53949fbfeff7fbc5bb1e0c3eb5706b642bd4d1b1dba37266417becb76253b4ccc')

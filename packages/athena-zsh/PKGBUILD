pkgname=athena-zsh
pkgver=1.0.1
pkgrel=2
pkgdesc="Zsh for Athena"
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('6b9e98317014aa88e3a6947c1d446368b238fd7baa0898a342c2d02532be5fe93596efc4739d2dbe27c00a5552056d24237a4aa7393270db3610d1c84e020180')

pkgname=athena-zsh
pkgver=1.0.1
pkgrel=4
pkgdesc="Zsh for Athena."
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'zsh-syntax-highlighting' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('0171aee8a07e9fd8afaf8e19ff89cd4d2aacb433de3eb9c6e0b7789b4a064bacfafc4a8cbc46d98d185012032af15ac5748bc20de997302f9168234164d23f1d')

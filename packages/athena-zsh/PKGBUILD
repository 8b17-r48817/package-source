pkgname=athena-zsh
pkgver=1.0.1
pkgrel=1
pkgdesc="Zsh for Athena"
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('cae1ee5f4322e0bf82fbf73960b6e7fe8d274076d6c6414ad568efef46562b0a1a88d970e31a58874f3d5b19666f1fd19248ec9b03069b8b73854ab8998eb9ee')

pkgname=athena-zsh
pkgver=1.0.1
pkgrel=1
pkgdesc="Zsh for Athena"
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('467fc60a54b0b6199efb8a8f0996497190ac40a6bc9d0a51952a89d8cbba6f431a59010106228d71debbb9e8aa11a3bafce8f2524d95dad7be927a3b9b3264bb')

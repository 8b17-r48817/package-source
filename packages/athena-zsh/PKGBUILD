pkgname=athena-zsh
pkgver=1.0.1
pkgrel=1
pkgdesc="Zsh for Athena"
arch=('any')
license=("custom")
depends=('zsh' 'zsh-autosuggestions' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('e18a0ca081af079b65c8bf0315eafeeb974a5508667254dc32509b9892c05a44de46dd2ab465704a050e9f36a683242fe0f6dd48bf748f5ec5a3c609f9683338')

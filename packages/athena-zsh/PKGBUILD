pkgname=athena-zsh
pkgver=1.0.0
pkgrel=4
pkgdesc="Zsh for Athena"
arch=('any')
license=("custom")
depends=('zsh' 'powerline-fonts')
source=("$pkgname.tar.gz")

package() {
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/usr/bin"

  cp -rf "${srcdir}/etc/skel/.zshrc" "${pkgdir}/etc/skel/"
  install -Dm 755 "${srcdir}/usr/bin/shopt" "${pkgdir}/usr/bin/"
}
sha512sums=('00dfe9830d8cf735908e5f9ad3337cc67fd0c44bf5f6be62869c265bec317f32db64734121e518857c9c6c8c561e4989d94b183b3b6cec83c2fd747874c5ff4e')
